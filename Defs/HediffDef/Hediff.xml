<Defs>



   <!--Fire火-->
   <HediffDef ParentName="InfectionBase">
    <defName>MF_Fire</defName>
    <hediffClass>MF_GuiYi.MF_Fire_Hediff_comp</hediffClass>
    <label>Power of Element</label>
	<!--Power of Element-->
    <labelNoun>Fire</labelNoun>
    <description>The power drawn from Fire mage will attack the enemies around the owner at regular intervals.</description>
	<scenarioCanAdd>false</scenarioCanAdd>
    <makesSickThought>false</makesSickThought>	
    <maxSeverity>1</maxSeverity>
    <isBad>false</isBad>
    <comps>	 
	  <li>
        <compClass>MF_GuiYi.MF_Fire_Hediff</compClass>
      </li>	  
    </comps>			
	<stages>
	<li>
	<label>sparks of fire</label>
		<statOffsets>
		  <ComfyTemperatureMax>4</ComfyTemperatureMax>		  
	    </statOffsets>
	</li> 
	<li>
	<minSeverity>0.30</minSeverity>
	<label>Medium sized fire</label>
		<statOffsets>
		  <ComfyTemperatureMax>10</ComfyTemperatureMax>		  
	    </statOffsets>
	</li> 
	<li>
	<minSeverity>0.60</minSeverity>
	<label>blazing prairie fire</label>
		<statOffsets>
		  <ComfyTemperatureMax>16</ComfyTemperatureMax>		  
	    </statOffsets>
	</li> 	
	<li>
	<minSeverity>1</minSeverity>
	<label>fire of Climbing the sky</label>
		<statOffsets>
		  <ComfyTemperatureMax>20</ComfyTemperatureMax>		  
	    </statOffsets>
	</li> 
	</stages>
  </HediffDef>
   
   <!--Frost霜-->
   
